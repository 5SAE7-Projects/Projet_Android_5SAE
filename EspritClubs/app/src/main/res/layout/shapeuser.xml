<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightpink"
    android:orientation="horizontal"
    android:layout_marginTop="1dp"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/champimage"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        android:text="Name :"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/name"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        android:text="champion name"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/roles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/champimage"
        android:layout_below="@id/name"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        android:text="Role : "
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textViewrole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/roles"
        android:layout_below="@id/textView"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        android:text="roles list"
        android:textColor="@color/black"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/gengers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/champimage"
        android:layout_below="@id/roles"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        android:text="Gender : "
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textViewgender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/gengers"
        android:layout_below="@id/roles"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        android:text="gender list"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/champimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        />

</RelativeLayout>