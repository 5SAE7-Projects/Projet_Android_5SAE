<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- First club item -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/club_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/aisec"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/club_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/club_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Aisec"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/reserve_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/club_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Reserve Now" />

        </RelativeLayout>

        <!-- Second club item -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/club_image2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tuni"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/club_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/club_image2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Tunivision"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/reserve_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/club_name2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Reserve Now" />

        </RelativeLayout>

        <!-- You can continue adding more club items below -->

    </LinearLayout>
</ScrollView>
